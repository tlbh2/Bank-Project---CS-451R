<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitcoin Price Chart</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        canvas {
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }
    </style>
</head>
<body>
    <div style="width: 80%; margin: 0 auto;">
        <h1>Micro Investment</h1>
        <canvas id="bitcoin-chart" width="400" height="200"></canvas>
    </div>

    <script>
        var ctx = document.getElementById('bitcoin-chart').getContext('2d');
        var labels = [];
        var data = [];

        async function fetchData() {
            try {
                const response = await fetch('https://api.coindesk.com/v1/bpi/currentprice/BTC.json');
                const json = await response.json();
                const time = new Date(json.time.updated).toLocaleTimeString();
                const price = json.bpi.USD.rate_float;

                labels.push(time);
                data.push(price);

                // Keep only the last 10 data points for the chart
                if (labels.length > 10) {
                    labels.shift();
                    data.shift();
                }

                // Update the chart
                updateChart();
            } catch (error) {
                console.error('Error fetching Bitcoin data:', error);
            }
        }

        function updateChart() {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Bitcoin Price (USD)',
                        data: data,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: false
                        }
                    }
                }
            });
        }

        // Fetch data and update the chart every 10 seconds
        fetchData();
        setInterval(fetchData, 10000); // 10 seconds interval
    </script>
</body>
</html>



